
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Controls access to user profile documents.
     * A user can read/write their own profile.
     */
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    /**
     * @description Controls access to storage location documents.
     * A user can list their own locations and read/write individual ones.
     */
    match /storageLocations/{storageLocationId} {
      allow list: if isSignedIn() && request.query.get('ownerId') == request.auth.uid;
      allow read, write: if isSignedIn() && isOwner(resource.data.ownerId);

      /**
       * @description Controls access to storage area subcollection.
       * A user can read/write areas within their own locations.
       */
       match /areas/{areaId} {
         allow read, write: if isSignedIn(); // Simplified for now, relies on parent location security
       }
    }

    /**
     * @description Controls access to crop batch documents.
     * A user can list their own batches and read/write individual ones.
     */
    match /cropBatches/{cropBatchId} {
       allow list: if isSignedIn() && request.query.get('ownerId') == request.auth.uid;
       allow read, write: if isSignedIn() && isOwner(resource.data.ownerId);
    }
    
    /**
     * @description Controls access to crop type documents.
     * A user can list their own crop types and read/write individual ones.
     */
    match /cropTypes/{cropTypeId} {
       allow list: if isSignedIn() && request.query.get('ownerId') == request.auth.uid;
       allow read, write: if isSignedIn() && isOwner(resource.data.ownerId);
    }

    /**
     * @description Controls access to customer documents.
     * A user can list their own customers and read/write individual ones.
     */
    match /customers/{customerId} {
      allow list: if isSignedIn() && request.query.get('ownerId') == request.auth.uid;
      allow read, write: if isSignedIn() && isOwner(resource.data.ownerId);
    }

    /**
     * @description Controls access to outflow transaction documents.
     * A user can list their own outflows and read/write individual ones.
     */
    match /outflows/{outflowId} {
      allow list: if isSignedIn() && request.query.get('ownerId') == request.auth.uid;
      allow read, write: if isSignedIn() && isOwner(resource.data.ownerId);
    }
  }
}
