
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================
    // Helper Functions
    // =========================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      // It's safer to check for existence before accessing .data
      return exists(/databases/$(database)/documents/users/$(request.auth.uid))
          && get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isRequestingUser(userId) {
        return request.auth.uid == userId;
    }

    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    function isOwner(docData) {
      return isSignedIn() && request.auth.uid == docData.ownerId;
    }
    
    function isOwnerOrAdmin(docData) {
      return isOwner(docData) || hasRole('admin');
    }

    // =========================================================
    // Collection Rules
    // =========================================================

    // USERS: Users can read/write their own profile. Admins can read/write any profile.
    match /users/{userId} {
      allow read, write: if isRequestingUser(userId) || hasRole('admin');
    }

    // LOCATIONS & AREAS
    match /storageLocations/{locationId} {
      // Allow read for single docs if owner/admin/manager
      allow get: if isSignedIn() && (isOwner(resource.data) || hasRole('admin') || hasRole('manager'));
      // Allow list if the query is properly constrained by ownerId (for users) or if admin/manager
      allow list: if isSignedIn() && (hasRole('admin') || hasRole('manager') || request.query.where.ownerId == request.auth.uid);
      allow write: if isSignedIn() && (isOwner(request.resource.data) || hasRole('admin'));

      match /areas/{areaId} {
        // Inherit permissions from parent location for single doc access
        allow get: if isSignedIn() && (isOwner(get(/databases/$(database)/documents/storageLocations/$(locationId)).data) || hasRole('admin') || hasRole('manager'));
        allow list, write: if isSignedIn() && (isOwner(get(/databases/$(database)/documents/storageLocations/$(locationId)).data) || hasRole('admin'));
      }
    }
    
    // CUSTOMERS, CROP TYPES, INFLOWS, OUTFLOWS, PAYMENTS
    // This pattern applies to all user-owned data collections
    match /{collection}/{docId} 
        where collection in ['customers', 'cropTypes', 'inflows', 'outflows', 'payments'] {
      // Allow single document reads if owner/admin/manager
      allow get: if isSignedIn() && (isOwner(resource.data) || hasRole('admin') || hasRole('manager'));
      // Allow list if the query constrains by ownerId, or if user is admin/manager
      allow list: if isSignedIn() && (hasRole('admin') || hasRole('manager') || request.query.where.ownerId == request.auth.uid);
      // Allow write if owner/admin
      allow write: if isSignedIn() && (isOwner(request.resource.data) || hasRole('admin'));
    }
  }
}
