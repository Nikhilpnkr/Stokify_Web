
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin or manager.
    function isManagerOrAdmin() {
      // Use .get() to safely access role, defaulting to a non-privileged role if it doesn't exist.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', 'user') in ['admin', 'manager'];
    }
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', 'user') == 'admin';
    }

    // Rule for user profiles
    match /users/{userId} {
      // Admins can write to any user profile to change roles.
      // A user can also update their OWN profile.
      allow write: if isAdmin() || request.auth.uid == userId;
      
      // Users can only read their own profile, but admins/managers can read any.
      allow get: if isManagerOrAdmin() || (request.auth != null && request.auth.uid == userId);
      
      // Only Admins and Managers can list all users.
      allow list: if isManagerOrAdmin();
    }
    
    // Rule for storageLocations and their subcollections
    match /storageLocations/{locationId} {
        allow get, update, delete: if isManagerOrAdmin() || (request.auth.uid == resource.data.ownerId);
        allow create: if isManagerOrAdmin() || (request.auth.uid == request.resource.data.ownerId);
        allow list: if isManagerOrAdmin() || request.auth.uid != null;

        // Rules for the 'areas' subcollection
        match /areas/{areaId} {
           allow read, write: if isManagerOrAdmin() || (request.auth != null && get(/databases/$(database)/documents/storageLocations/$(locationId)).data.ownerId == request.auth.uid);
        }
    }
    
    // Rule for cropBatches
    match /cropBatches/{batchId} {
        allow get, update, delete: if isManagerOrAdmin() || (request.auth.uid == resource.data.ownerId);
        allow create: if isManagerOrAdmin() || (request.auth.uid == request.resource.data.ownerId);
        allow list: if isManagerOrAdmin() || request.auth.uid != null;
    }

    // Rule for outflows
    match /outflows/{outflowId} {
        allow get, update, delete: if isManagerOrAdmin() || (request.auth.uid == resource.data.ownerId);
        allow create: if isManagerOrAdmin() || (request.auth.uid == request.resource.data.ownerId);
        allow list: if isManagerOrAdmin() || request.auth.uid != null;
    }
    
    // Rule for cropTypes
    match /cropTypes/{cropTypeId} {
        allow get, update, delete: if isManagerOrAdmin() || (request.auth.uid == resource.data.ownerId);
        allow create: if isManagerOrAdmin() || (request.auth.uid == request.resource.data.ownerId);
        allow list: if isManagerOrAdmin() || request.auth.uid != null;
    }

    // Rule for customers
    match /customers/{customerId} {
        allow get, update, delete: if isManagerOrAdmin() || (request.auth.uid == resource.data.ownerId);
        allow create: if isManagerOrAdmin() || (request.auth.uid == request.resource.data.ownerId);
        allow list: if isManagerOrAdmin() || request.auth.uid != null;
    }
  }
}
