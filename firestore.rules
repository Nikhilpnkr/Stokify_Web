rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is the owner of a document.
    function isOwner(resource) {
      return request.auth.uid == resource.data.ownerId;
    }

    // Rules for user profiles.
    // Users can read any profile, create their own, and update/delete their own.
    match /users/{userId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid == userId;
      allow update, delete: if request.auth.uid == userId;
    }

    // Rules for top-level collections owned by a user.
    // This applies to cropBatches, storageLocations, cropTypes, customers, and outflows.
    match /{collection}/{docId} {
        // Allow read, update, and delete if the user is the owner.
        allow get, update, delete: if isOwner(get(/databases/$(database)/documents/$(collection)/$(docId)));

        // Allow create if the user is setting themselves as the owner.
        allow create: if request.auth.uid == request.resource.data.ownerId;

        // Securely allow list operations ONLY when the query filters by the user's UID.
        allow list: if request.auth.uid != null && request.query.get('ownerId') == request.auth.uid;
    }

    // Rules for the 'areas' subcollection within 'storageLocations'.
    // Access is granted if the user owns the parent storageLocation.
    match /storageLocations/{locationId}/areas/{areaId} {
       allow read, write: if get(/databases/$(database)/documents/storageLocations/$(locationId)).data.ownerId == request.auth.uid;
    }
  }
}
