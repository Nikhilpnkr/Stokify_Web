
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // A user can read/write their own profile.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      // Users can only list other users they own (e.g. an admin creating other users)
      allow list: if request.query.where.get('ownerId') == request.auth.uid;
    }
    
    // A user can only interact with locations they own.
    match /storageLocations/{locationId} {
        allow read, write: if resource.data.ownerId == request.auth.uid;
        allow create: if request.resource.data.ownerId == request.auth.uid;
        allow list: if request.query.where.get('ownerId') == request.auth.uid;

        // A user can interact with areas if they own the parent location.
        match /areas/{areaId} {
           allow read, write: if get(/databases/$(database)/documents/storageLocations/$(locationId)).data.ownerId == request.auth.uid;
           // Listing areas requires querying via the parent location, which is handled in the app logic.
           allow list: if get(/databases/$(database)/documents/storageLocations/$(locationId)).data.ownerId == request.auth.uid;
        }
    }
    
    // A user can only interact with batches they own.
    match /cropBatches/{batchId} {
        allow read, write: if resource.data.ownerId == request.auth.uid;
        allow create: if request.resource.data.ownerId == request.auth.uid;
        allow list: if request.query.where.get('ownerId') == request.auth.uid;
    }

    // A user can only interact with outflows they own.
    match /outflows/{outflowId} {
        allow read, write: if resource.data.ownerId == request.auth.uid;
        allow create: if request.resource.data.ownerId == request.auth.uid;
        allow list: if request.query.where.get('ownerId') == request.auth.uid && (
          request.query.orderBy.keys().size() == 0 || 
          (request.query.orderBy.keys().size() == 1 && request.query.orderBy.keys()[0] == 'date')
        );
    }
    
    // A user can only interact with crop types they own.
    match /cropTypes/{cropTypeId} {
        allow read, write: if resource.data.ownerId == request.auth.uid;
        allow create: if request.resource.data.ownerId == request.auth.uid;
        allow list: if request.query.where.get('ownerId') == request.auth.uid;
    }

    // A user can only interact with customers they own.
    match /customers/{customerId} {
        allow read, write: if resource.data.ownerId == request.auth.uid;
        allow create: if request.resource.data.ownerId == request.auth.uid;
        allow list: if request.query.where.get('ownerId') == request.auth.uid;
    }
  }
}
