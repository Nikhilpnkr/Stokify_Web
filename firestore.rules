
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin.
    // It checks the 'role' field on the user's own profile document.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rule for user profiles
    match /users/{userId} {
      // Admins can read/write any profile.
      // Regular users can only read/write their own profile.
      allow read, write: if isAdmin() || (request.auth != null && request.auth.uid == userId);
    }
    
    // Rule for storageLocations and their subcollections
    match /storageLocations/{locationId} {
        // Admins have full access.
        // Users can perform actions if they own the document or are querying their own data.
        allow get, update, delete: if isAdmin() || (request.auth.uid == resource.data.ownerId);
        allow create: if isAdmin() || (request.auth.uid == request.resource.data.ownerId);
        allow list: if isAdmin() || (request.auth.uid == request.query.get("ownerId"));

        // Rules for the 'areas' subcollection
        match /areas/{areaId} {
           // Admins can manage all areas.
           // Users can manage areas in warehouses they own by checking the parent document.
           allow read, write: if isAdmin() || (request.auth != null && get(/databases/$(database)/documents/storageLocations/$(locationId)).data.ownerId == request.auth.uid);
        }
    }
    
    // Rule for cropBatches
    match /cropBatches/{batchId} {
        allow get, update, delete: if isAdmin() || (request.auth.uid == resource.data.ownerId);
        allow create: if isAdmin() || (request.auth.uid == request.resource.data.ownerId);
        allow list: if isAdmin() || (request.auth.uid == request.query.get("ownerId"));
    }

    // Rule for outflows
    match /outflows/{outflowId} {
        allow get, update, delete: if isAdmin() || (request.auth.uid == resource.data.ownerId);
        allow create: if isAdmin() || (request.auth.uid == request.resource.data.ownerId);
        allow list: if isAdmin() || (request.auth.uid == request.query.get("ownerId"));
    }
    
    // Rule for cropTypes
    match /cropTypes/{cropTypeId} {
        allow get, update, delete: if isAdmin() || (request.auth.uid == resource.data.ownerId);
        allow create: if isAdmin() || (request.auth.uid == request.resource.data.ownerId);
        allow list: if isAdmin() || (request.auth.uid == request.query.get("ownerId"));
    }

    // Rule for customers
    match /customers/{customerId} {
        allow get, update, delete: if isAdmin() || (request.auth.uid == resource.data.ownerId);
        allow create: if isAdmin() || (request.auth.uid == request.resource.data.ownerId);
        allow list: if isAdmin() || (request.auth.uid == request.query.get("ownerId"));
    }
  }
}
