
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================
    // Helper Functions
    // =========================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      // It's safer to check for existence before accessing .data
      return exists(/databases/$(database)/documents/users/$(request.auth.uid))
          && get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isRequestingUser(userId) {
        return request.auth.uid == userId;
    }

    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    function isOwner(docData) {
      return isSignedIn() && request.auth.uid == docData.ownerId;
    }
    
    function isOwnerOrAdmin(docData) {
      return isOwner(docData) || hasRole('admin');
    }

    // =========================================================
    // Collection Rules
    // =========================================================

    // USERS: Users can read/write their own profile. Admins can read/write any profile.
    match /users/{userId} {
      allow read, write: if isRequestingUser(userId) || hasRole('admin');
    }

    // LOCATIONS & AREAS
    match /storageLocations/{locationId} {
      allow get: if isSignedIn() && (isOwner(resource.data) || hasRole('admin'));
      allow list: if isSignedIn() && (hasRole('admin') || request.query.where.ownerId == request.auth.uid);
      allow write: if isSignedIn() && (isOwner(request.resource.data) || hasRole('admin'));

      match /areas/{areaId} {
        allow get: if isSignedIn() && (isOwner(get(/databases/$(database)/documents/storageLocations/$(locationId)).data) || hasRole('admin'));
        allow list, write: if isSignedIn() && (hasRole('admin') || get(/databases/$(database)/documents/storageLocations/$(locationId)).data.ownerId == request.auth.uid);
      }
    }
    
    // CUSTOMERS, CROP TYPES, INFLOWS, OUTFLOWS, PAYMENTS
    match /{collection}/{docId} 
        where collection in ['customers', 'cropTypes', 'inflows', 'outflows', 'payments'] {
      allow get: if isSignedIn() && (isOwner(resource.data) || hasRole('admin'));
      allow list: if isSignedIn() && (hasRole('admin') || request.query.where.ownerId == request.auth.uid);
      allow write: if isSignedIn() && (isOwner(request.resource.data) || hasRole('admin'));
    }
  }
}
