
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // A user can read/write their own user profile. An admin can read/write any user profile.
    match /users/{userId} {
      allow read, write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }

    // Generic function to check for ownership or admin privileges.
    // This reduces code duplication across different collections.
    function isOwnerOrAdmin(collectionName) {
      let isOwner = resource.data.ownerId == request.auth.uid;
      let isCreatingOwner = request.resource.data.ownerId == request.auth.uid;
      let isQueryingOwnData = request.query.get('ownerId') == request.auth.uid;
      
      // Allow full access for admins.
      if (isAdmin()) {
        return true;
      }
      
      // For non-admins, enforce ownership rules.
      return request.auth != null && (
        (request.method in ['get', 'update', 'delete'] && isOwner) ||
        (request.method == 'create' && isCreatingOwner) ||
        (request.method == 'list' && isQueryingOwnData)
      );
    }
    
    // Apply the isOwnerOrAdmin rule to all primary data collections.
    match /storageLocations/{locationId} {
        allow read, write: if isOwnerOrAdmin('storageLocations');
        
        // Rules for the 'areas' subcollection
        match /areas/{areaId} {
           // Users can manage areas in warehouses they own. Admins can manage all areas.
           allow read, write: if request.auth != null && (get(/databases/$(database)/documents/storageLocations/$(locationId)).data.ownerId == request.auth.uid || isAdmin());
        }
    }
    
    match /cropBatches/{batchId} {
        allow read, write: if isOwnerOrAdmin('cropBatches');
    }

    match /outflows/{outflowId} {
        allow read, write: if isOwnerOrAdmin('outflows');
    }
    
    match /cropTypes/{cropTypeId} {
      allow read, write: if isOwnerOrAdmin('cropTypes');
    }

    match /customers/{customerId} {
      allow read, write: if isOwnerOrAdmin('customers');
    }
  }
}
